# See: http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_size = 8
indent_style = tabs
max_line_length = 80

[*.go]
  indent_size = 8
  indent_style = tabs
  max_line_length = 0

[*.md]
  indent_size = 2
  indent_style = space
  max_line_length = 80

[Makefile]
  indent_size = 8
  indent_style = tabs
  max_line_length = 0

[*.yml]
  indent_style = space
  indent_size = 2
  max_line_length = 0

[*.editorconfig]
  indent_style = space
  indent_size = 2
  max_line_length = 0
